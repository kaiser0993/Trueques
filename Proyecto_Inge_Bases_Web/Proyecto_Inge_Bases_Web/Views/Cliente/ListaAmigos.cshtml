@model Proyecto_Inge_Bases_Web.Models.MostrarListas

@{
    ViewBag.Title = "Lista de Amigos";
}
<head>
    <!--Este estilo es para que las cartas o contenedores se posicionen juntos-->
    <style>
        .card {
            display: inline-block;
        }
    </style>
</head>
<!--Icons library-->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

<div class="row justify-content-center">
    <div class="col-xs-6">
        <div class="card mx-auto" style="width: 30rem; margin-top:35px">
            <div class="card-header text-left" style="padding:25px">
                <h5>Lista de Amigos </h5>
            </div>
            <div class="card-body">
                <table class="table">
                    
                    @foreach (var item in Model.Amigos)
                    {
                        <tr>
                            <td>
                                @item.Nombre
                            </td>
                            <td>
                                @item.Apellido1
                            </td>
                            <td>
                                @item.Apellido2
                            </td>
                            <td>
                                @Html.ActionLink(" ", "Delete", "Delete", new { @class = "fas fa-trash", style = "color:gray", id = item.CorreoAmigo })

                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>

    <div class="col-xs-6">
        <div class="card mx-auto" style="width: 30rem;  margin-top:35px">
            <div class="card-header text-left" style="padding:25px">
                <h5>Sugerencias</h5>
            </div>
            <div class="card-body">
                <table class="table">
                    
                    @foreach (var item in Model.NoAmigos)
                    {
                        <tr>
                            <td>
                                @item.Nombre
                            </td>
                            <td>
                                @item.Apellido1
                            </td>
                            <td>
                                @item.Apellido2
                            </td>
                            <td>
                                @Html.ActionLink(" ", "Delete", "Delete", new { @class = "fa fa-plus", style = "color:gray", id = item.amigo })

                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>

    </div>
</div> 