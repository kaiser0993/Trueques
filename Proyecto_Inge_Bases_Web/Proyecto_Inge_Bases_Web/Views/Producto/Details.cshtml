@model Proyecto_Inge_Bases_Web.Models.Producto

@{
    ViewBag.Title = "Details";
}

<head>

    <style>

        .cuerpo {
            margin: auto;
            width: 60%;
            padding: 10px;
            background: rgb(255, 255, 255);
        }
    </style>

</head>

<div class="cuerpo">

    <div class="text-secondary mt-4">
        <h2 style="font-weight:500; font-family:inherit; color:inherit">Detalles producto</h2>
    </div>

    <table class="mt-2">
        <tbody>
            <tr>
                <td>
                    <!-- https://www.w3schools.com/w3css/tryit.asp?filename=tryw3css_slideshow_self -->
                    <meta name="viewport" content="width=device-width, initial-scale=1">
                    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
                    <style>
                        .mySlides {
                            display: none;
                        }
                    </style>
                    @if (Model.PathImagen1 != null || Model.PathImagen2 != null || Model.PathImagen3 != null)
                    {
                        <div class="w3-content w3-display-container">
                            @if (Model.PathImagen1 != null)
                            {
                                <img src="@Url.Content(Model.PathImagen1)" alt="Imagen1" style="width:400px; height:400px" class="mySlides" />
                            }
                            @if (Model.PathImagen2 != null)
                            {
                                <img src="@Url.Content(Model.PathImagen2)" alt="Imagen2" style="width:400px; height:400px" class="mySlides" />
                            }
                            @if (Model.PathImagen3 != null)
                            {
                                <img src="@Url.Content(Model.PathImagen3)" alt="Imagen3" style="width:400px; height:400px" class="mySlides" />
                            }
                            <button class="w3-button w3-display-left" onclick="plusDivs(-1)">&#10094;</button>
                            <button class="w3-button w3-display-right" onclick="plusDivs(1)">&#10095;</button>
                        </div>
                    }
                    else
                    {
                        <img src="https://i2.wp.com/www.bicifan.uy/wp-content/uploads/2016/09/producto-sin-imagen.png?fit=862%2C1104&ssl=1" style="width:600px; height:600px">

                    }

                    <script src="~/Scripts/SlideImg.js"></script>
                </td>

                <td>
                    <div class="mt-3 ml-2">
                        <table cellspacing="30">
                            <tr>
                                <td>
                                    <h3>

                                        @Html.DisplayFor(model => model.Nombre)

                                    </h3><br />
                                </td>

                            </tr>

                            <tr>
                                <td>
                                    De: @Html.DisplayFor(model => model.Cliente.Correo)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Publicado @Html.DisplayFor(model => model.FechaPublicado)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Categorias:
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Condición :
                                    @Html.DisplayFor(model => model.Condicion)
                                </td>
                            <tr />

                            <tr>
                                <td>
                                    <h4>
                                        ₡
                                        @Html.DisplayFor(model => model.PrecioEstimado)
                                    </h4>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <br>@Html.DisplayFor(model => model.Descripcion)
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <br>
                                    <!--@Html.DisplayNameFor(model => model.Publicado)-->
                                    <!--@Html.DisplayFor(model => model.Publicado)-->
                                    @if ((this.Model.Publicado == false))
                                    {
                                        <p>Sin ofertar</p>
                                    }
                                    else
                                    {
                                        <p>Ofertado</p>
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>

    <p>
        <button class="btn btn-info" style="background-color:  #00c0f3" type="button" onclick="location.href = '@Url.Action("Index", "Producto")'"> Volver</button>
        <button class="btn btn-info" style="background-color:  #00c0f3" type="button" onclick="location.href = '@Url.Action("Edit", new { id = Model.ProductoID, correo = Model.CorreoCliente})'"> Editar</button>
    </p>

</div>

