@model Proyecto_Inge_Bases_Web.Models.Producto

@{
    ViewBag.Title = "Details";
}


<div class="text-muted" style="margin-top: 35px;">
</div>


<head>

    <style>

        .cuerpo {
            margin: auto;
            width: 60%;
            padding: 10px;
            background: rgb(255, 255, 255);
        }

        .titulo-suave {
            font-weight: normal;
        }
    </style>

</head>

<div class="cuerpo">

    <div class="text-secondary mt-4">
        <h2 style="font-weight:500; font-family:inherit; color:inherit">Detalles producto</h2>
    </div>

    <table class="mt-2">
        <tbody>
            <tr>
                <td>
                    <meta name="viewport" content="width=device-width, initial-scale=1">
                    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
                    <style>
                        .mySlides {
                            display: none;
                        }
                    </style>
                    @if (Model.PathImagen1 != null || Model.PathImagen2 != null || Model.PathImagen3 != null)
                    {
                        <div class="w3-content w3-display-container">
                            @if (Model.PathImagen1 != null)
                            {
                                <img src="@Url.Content(Model.PathImagen1)" alt="Imagen1" style="width:400px; height:400px" class="mySlides" />
                            }
                            @if (Model.PathImagen2 != null)
                            {
                                <img src="@Url.Content(Model.PathImagen2)" alt="Imagen2" style="width:400px; height:400px" class="mySlides" />
                            }
                            @if (Model.PathImagen3 != null)
                            {
                                <img src="@Url.Content(Model.PathImagen3)" alt="Imagen3" style="width:400px; height:400px" class="mySlides" />
                            }
                            <button class="w3-button w3-display-left" onclick="plusDivs(-1)">&#10094;</button>
                            <button class="w3-button w3-display-right" onclick="plusDivs(1)">&#10095;</button>
                        </div>
                    }
                    else
                    {
                        <img src="https://pngimage.net/wp-content/uploads/2018/06/imagen-no-disponible-png-4.png" style="width:600px; height:600px">

                    }

                    <script src="~/Scripts/SlideImg.js"></script>
                </td>
                <td>
                    <div class="mt-3 ml-2">
                        <table cellspacing="30">
                            <tr>
                                <td>
                                    <h3 class="titulo-suave">

                                        @Html.DisplayFor(model => model.Nombre) <!--Nombre del producto -->

                                    </h3>
                                </td>

                            </tr>

                            <tr>
                                <td>
                                    De: @Html.DisplayFor(model => model.Cliente.Correo) <!--De: Correo del cliente.  CAMBIAR A QUE SEA LE NOMBRE-->
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Publicado el @Html.DisplayFor(model => model.FechaPublicado) <!--Fecha de publicado-->
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Categorias: <!--Esto falta de poner-->
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Condición :
                                    @Html.DisplayFor(model => model.Condicion) <!--Estado del producto-->
                                </td>
                            <tr />


                            <tr>
                                <td>
                                    <h4>
                                        <br />
                                        ₡
                                        @Html.DisplayFor(model => model.PrecioEstimado) <!-- Cambiar el color al verde que se ve en el prototipo-->
                                    </h4>
                                </td>
                            </tr>
                            <!--
            <tr>
                <td>
                    <br>
                    @Html.DisplayNameFor(model => model.Publicado)
                    @Html.DisplayFor(model => model.Publicado)
                </td>
            </tr>-->

                        </table>
                    </div>
                    @if (ViewBag.esCliente == true)
                    {
                <a style="background-color: #DC3545;margin-left:100%" href="@Url.Action(
                             actionName: "Realizar_Denuncia",
                                controllerName: "Denuncias",
                                routeValues: new
                                 {
                                correo = Model.Cliente.Correo
                                }
                                 )" class="btn btn-danger">
                    Denunciar
                </a> }
                            else
                            {
                <a style="background-color: #DC3545;margin-left:90%" href="@Url.Action(actionName: "IniciarSesion", controllerName: "Registrado")" class="btn btn-danger">Denunciar</a>}
                </td>
            </tr>
            <tr>

                <div>
                    <!-- Nuevo div, para que descripción tome casi todo el ancho de la pantalla-->

                    <table cellspacing="30">


                        <tr>
                            <td style="padding-left: 35px; padding-right: 35px;">
                                <h2> Descripción del producto</h2>
                                <br>@Html.DisplayFor(model => model.Descripcion)
                            </td>
                        </tr>


                    </table>

                    <table style="margin-top: 50px; margin-left: 55px">
                        <!-- Hago una tabla aparte, para manejar cada botón como una columna. -->

                        <tr>
                            <td>

                                <p>
                                    <a style="background-color:#00c0f3;" href='@Url.Action("Index", "ProductosDelDia")' class="btn btn-primary">Volver</a>
                                </p>

                            </td>



                        </tr>

                    </table>



                </div>

            </tr>







        </tbody>
    </table>


</div>
